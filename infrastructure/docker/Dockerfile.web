# Multi-stage build for kairos-web

# Build stage
FROM node:20 as builder

WORKDIR /app

# Copy Angular app
COPY apps/kairos-web/package*.json ./
RUN npm ci

COPY apps/kairos-web ./
RUN npm run build

# Runtime stage
FROM nginx:alpine

# Copy built app to nginx
COPY --from=builder /app/dist/kairos-web/browser /usr/share/nginx/html

# Copy nginx configuration
COPY infrastructure/docker/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
