# ============================================================================
# KAIRÃ“S Trading System - Global Environment Configuration
# ============================================================================
# This file contains shared configuration for all services in the monorepo.
# Copy this file to .env and update with your actual values.
# DO NOT commit .env files with sensitive data!
# ============================================================================

# ----------------------------------------------------------------------------
# Environment
# ----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=info
RUST_LOG=info,kairos_core=debug,kairos_api=debug

# ----------------------------------------------------------------------------
# DragonflyDB (Redis-compatible in-memory DB)
# ----------------------------------------------------------------------------
DRAGONFLY_HOST=dragonfly
DRAGONFLY_PORT=6379
DRAGONFLY_URL=redis://dragonfly:6379

# For local development (when not using Docker):
# DRAGONFLY_HOST=localhost
# DRAGONFLY_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# TimescaleDB (PostgreSQL with time-series extensions)
# ----------------------------------------------------------------------------
TIMESCALE_HOST=timescale
TIMESCALE_PORT=5432
TIMESCALE_DB=kairos_trading
TIMESCALE_USER=kairos
TIMESCALE_PASSWORD=kairos_password
TIMESCALE_URL=postgresql://kairos:kairos_password@timescale:5432/kairos_trading

# For local development (when not using Docker):
# TIMESCALE_HOST=localhost
# TIMESCALE_URL=postgresql://kairos:kairos_password@localhost:5432/kairos_trading

# ----------------------------------------------------------------------------
# gRPC Configuration (Inter-service communication)
# ----------------------------------------------------------------------------
GRPC_PORT=50051
CORE_GRPC_HOST=kairos-core
CORE_GRPC_PORT=50051
CORE_GRPC_URL=http://kairos-core:50051

# For local development:
# CORE_GRPC_HOST=localhost
# CORE_GRPC_URL=http://localhost:50051

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_PORT=4000
API_HOST=0.0.0.0
SERVER_PORT=4000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://kairos-web:80

# ----------------------------------------------------------------------------
# Trading Configuration
# ----------------------------------------------------------------------------
INITIAL_BALANCE=10000.0
MAX_DAILY_RISK=1000.0
MIN_PROFIT_THRESHOLD=0.001

# ----------------------------------------------------------------------------
# Exchange API Keys (DO NOT COMMIT REAL KEYS!)
# ----------------------------------------------------------------------------
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

# OKX
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_secret_here
OKX_SECRET_KEY=your_okx_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_ENVIRONMENT=demo  # demo or production

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRATION=3600  # seconds

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_PAPER_TRADING=true
ENABLE_METRICS=true
ENABLE_DEBUG_ENDPOINTS=false

# ----------------------------------------------------------------------------
# Network Configuration
# ----------------------------------------------------------------------------
DOCKER_NETWORK=kairos-network
